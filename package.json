{
  "name": "agent-sync-cli",
  "version": "0.1.0",
  "type": "module",
  "description": "CLI tools to manage synchronization of AI coding agent files, such as reusable prompts and skills.",
  "repository": "github:afink170/agent-sync-cli",
  "homepage": "https://github.com/afink170/agent-sync-cli",
  "bugs": "https://github.com/afink170/agent-sync-cli/issues",
  "author": "Andrew Fink",
  "license": "MIT",
  "keywords": [
    "cli",
    "ai",
    "agent",
    "sync"
  ],
  "engines": {
    "node": ">=20.17"
  },
  "main": "dist/index.js",
  "bin": {
    "agent-sync": "dist/index.js"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "commitlint": "commitlint --edit",
    "generate-schema": "tsx scripts/generate-schema.ts && prettier --write schemas/",
    "prebuild": "pnpm generate-schema",
    "build": "tsup",
    "prepack": "pnpm build",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "changeset:add": "changeset add",
    "changeset:add:empty": "changeset add --empty",
    "changeset:commit": "git add ./.changeset/*.md && git commit -m 'chore(changeset): add changeset'"
  },
  "dependencies": {
    "@node-cli/logger": "^1.3.2",
    "@trpc/server": "^10.45.0",
    "cosmiconfig": "^9.0.0",
    "globby": "^16.1.0",
    "trpc-cli": "^0.12.1",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsup": "^7.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^0.34.0"
  }
}
